<!--pages/team_more_set/team_more_set.wxml-->
<view class="create_box">
  <view class="no_use"></view>
  <form>
  <view class="intro">
    <text class="id">ID：</text><input name='team_id' type="text" placeholder="{{team.id}}" class="join_input"/>
  </view>
  <view class="intro">
    <text class="mem_sup">人数：</text><input name='team_sup' type="text" placeholder="{{team.count}}/{{team.sup}}" class="join_input"/>
  </view>
  <view class="intro">
    <text class="leader">队长：</text><input name='team_leader' type="text" placeholder="{{team.leader}}" class="join_input"/>
  </view>
  <view class="intro">
    <text class="more">更多信息：</text>
    
    <input name='team_info' type="text" placeholder="{{team.info}}" class="join_input"/>
  </view>
  <view class="invite">
    <text class="title">成员名单</text>
    <checkbox-group class="member_list">
      <label class="member" wx:for="{{team.member}}" wx:for-item="member_name">
        <checkbox>
        <view>
          <image src="../../image/head_images/1.jpg"/>
        </view>
        <view class="mask"></view>
        <text>{{member_name}}</text>
        </checkbox>
      </label>
    </checkbox-group> 
      
      <view class="clear"></view>
    
    
  </view>
  <button class="join" bindtap='join_team'>修改</button>
  </form>
</view>
